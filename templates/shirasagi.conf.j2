include conf.d/common/drop.conf;
include conf.d/common/botdrop.conf;
root /var/www/{{ shirasagi_dir }}/public/sites/w/w/w/_/;
error_page 404 /404.html;

location @app {
    include conf.d/header.conf;
    if ($request_filename ~ .*\.(ico|gif|jpe?g|png|css|js)$) { access_log off; }
    proxy_pass http://127.0.0.1:3000;
    proxy_set_header X-Accel-Mapping /var/www/{{ shirasagi_dir }}/=/private_files/;
    proxy_intercept_errors on;
}
location / {
    try_files $uri $uri/index.html @app;
}
location ^~ /assets/ {
    root /var/www/{{ shirasagi_dir }}/public/;
    expires 1h;
    access_log off;
}
location ^~ /private_files/ {
    internal;
    alias /var/www/{{ shirasagi_dir }}/;
}
location ~* \.(ico|css|js|gif|jpe?g|png)$ {
    include conf.d/common/security.conf;
    expires 2h;
    access_log off;
    log_not_found off;
    try_files $uri @app;
}
location ~* \.svg$ {
    expires 1h;
    access_log off;
    log_not_found off;
    add_header Content-Disposition "attachment";
    try_files $uri @app;
}
location ~* /fs/.*\.(htm|html)$ {
    add_header Content-Disposition "attachment";
    try_files $uri @app;
}
